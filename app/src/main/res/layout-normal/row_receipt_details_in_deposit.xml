<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="11"
        android:background="@drawable/custom_textbox"
        android:orientation="horizontal" >

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_refno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="2"
            android:gravity="center"
            android:text="RefNo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/customer_listview_text_size2" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_debtor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2" />

        <!--<com.lankahardware.lankahw.control.FinacFont-->
        <!--android:id="@+id/dateDiff"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dip"-->
        <!--android:layout_marginRight="1dip"-->
        <!--android:layout_weight="0.75"-->
        <!--android:gravity="center"-->
        <!--android:text="DD"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:textColor="@color/greenColor"-->
        <!--android:textSize="@dimen/font_size_small" />-->

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_txndate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="Due amt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_chequeno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="2"
            android:gravity="right"
            android:text="0.00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_totamt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Days"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2" />

        <CheckBox
            android:id="@+id/chkId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>