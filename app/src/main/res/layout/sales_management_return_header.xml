<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView_ret_hed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/finac_medium_top_margin"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.lankahardwared.lankahw.control.FinacFont
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/finac_medium_top_margin"
                android:text="- No Customer Selected -"
                android:padding="2dp"
                android:textColor="@color/greenColor"
                android:textSize="@dimen/font_for_heading"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:divider="@color/blueColor"
                android:dividerPadding="10dp"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/blueColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/tour_spinner_top_margin">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="RETURN NO"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"/>

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/return_header_return_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:editable="false"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="DATE"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"/>

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/return_header_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:editable="false"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="MANUAL NO"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/return_header_manual_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:padding="5dp">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="REMARKS"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/return_header_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:padding="5dp">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="REASON"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/et_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/finac_medium_edit_text_size"
                        android:gravity="center"></EditText>

                    <Button
                        android:id="@+id/btn_reason_search"
                        android:layout_width="@dimen/finac_medium_image_width"
                        android:layout_height="@dimen/finac_medium_image_width"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/search_button" />
                </LinearLayout>

