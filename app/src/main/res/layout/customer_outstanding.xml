<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        >

        <TextView
            android:id="@+id/lblInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:hint="Invoice NO"
            android:textSize="15dp"
            android:textColor="#000"
             />

        <TextView
            android:id="@+id/lblInvoiceAmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:hint="Invoice Amount"
            android:textSize="15dp"
            android:textColor="#000"
             />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="8">

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/lblMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:textColor="@color/unselected"
            android:text="REF NO" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="DATE"
            android:textColor="@color/unselected" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="Type"
            android:textColor="@color/unselected" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2.5"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="AMOUNT"
            android:textColor="@color/unselected" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/lvCusDebt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:divider="@color/list_view_diveder"
        android:dividerHeight="1dp"
        android:layout_marginTop="5dp">

    </ListView>

</LinearLayout>