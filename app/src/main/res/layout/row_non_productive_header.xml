<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/row_nonprdhed_refno"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="refno text"
        android:textColor="@color/blue_c"
        android:textSize="@dimen/toolbar_text_size"
         />

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/refno"
        android:text=""
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/finac_medium_text_size"
        android:textStyle="italic" />

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="amount Text"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/toolbar_text_size"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/route"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/finac_medium_text_size"
        android:textStyle="italic"
        android:visibility="gone"/>

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/row_nonprdhed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/row_nonprdhed_refno"
        android:text="customer"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/finac_ultra_medium_text_size"
        android:textStyle="italic" />

</LinearLayout>