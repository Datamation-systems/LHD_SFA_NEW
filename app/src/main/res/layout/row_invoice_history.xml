<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/refno"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="refno text"
        android:textColor="@color/blue_c"
        android:textSize="@dimen/toolbar_text_size" />

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/refno"
        android:text="date text"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/finac_medium_text_size"
        />

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="amount Text"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/toolbar_text_size"
        />

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/qty"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/finac_medium_text_size"
        android:textStyle="italic" />

    <com.lankahardwared.lankahw.control.FinacFont
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date"
        android:layout_below="@+id/date"
        android:text="customer"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/finac_ultra_medium_text_size"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/approved"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:background="@drawable/approved"
        android:visibility="gone"/>

</RelativeLayout>