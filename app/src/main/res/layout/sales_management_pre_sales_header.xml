<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/finac_medium_top_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lankahardwared.lankahw.control.FinacFont
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/finac_medium_top_margin"
                    android:text="- No Customer Selected -"
                    android:padding="2dp"
                    android:textColor="@color/greenColor"
                    android:textSize="@dimen/customer_spinner_text_size"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_large_text_view_height"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:id="@+id/lblMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total Outstanding (Rs.)"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:textStyle="bold" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:id="@+id/sa_header_outstanding_amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:gravity="right"
                        android:text="0.00"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:textStyle="bold"/>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_large_text_view_height"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Last Order value        (Rs.)"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/finac_medium_text_size"
                        />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:id="@+id/sa_header_last_bill_amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="right"
                        android:text="0.00"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:textStyle="bold"/>


                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:divider="@color/blueColor"
                android:dividerPadding="10dp"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/blueColor" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/tour_spinner_top_margin">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="ORDER NO"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/sa_header_order_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                         android:editable="false"
                         android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="DATE"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"/>

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/sa_header_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:editable="false"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="MANUAL NO"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:textStyle="bold" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/sa_header_manual_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="DELIVERY DATE"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/sa_header_del_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="8"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/finac_medium_edit_text_size" />

                    <ImageButton
                        android:id="@+id/iBtnDeliDate"
                        android:layout_width="@dimen/finac_medium_image_width"
                        android:layout_height="@dimen/finac_medium_image_width"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/calendar" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="REMARKS"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/sa_header_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/finac_medium_edit_text_size">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:text="Route"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_size_intermed"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/sa_header_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:textColor="@android:color/black"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="ROUTE"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size" />


                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />
                    <EditText
                        android:id="@+id/txtRoute"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:editable="false"
                        android:textSize="@dimen/finac_medium_edit_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="COST CODE"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"/>
                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/txtCost"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:gravity="center"
                        android:textSize="@dimen/finac_medium_edit_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="LOCATION"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"/>
                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/spnnervLoc"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="55dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_edit_text_top_margin"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="@dimen/finac_medium_text_view_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="LOC CODE"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/finac_medium_text_size"/>

                    <com.lankahardwared.lankahw.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/finac_medium_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/txtLoc_Code"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:gravity="center"
                        android:textSize="@dimen/finac_medium_edit_text_size" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>