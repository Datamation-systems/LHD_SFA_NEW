                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/finac_medium_top_margin"
                    android:gravity="center"
                    android:paddingBottom="@dimen/finac_small_margin"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btn_add"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_large_image_height"
                        android:textColor="@color/unselected"
                        android:layout_marginLeft="@dimen/finac_medium_top_margin"
