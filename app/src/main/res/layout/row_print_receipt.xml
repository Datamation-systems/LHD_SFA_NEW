<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="11"
        android:orientation="horizontal" >

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_refno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="2.5"
            android:gravity="left"
            android:text="RefNo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#040d19"/>

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_txndate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="2.0"
            android:gravity="left"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#040d19" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_dueAmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.7"
            android:gravity="right"
            android:text="Due amt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#040d19" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_Amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.7"
            android:gravity="right"
            android:text="0.00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#040d19" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/row_bal_due_Amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.7"
            android:gravity="right"
            android:text="0.00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#040d19" />

        <com.lankahardwared.lankahw.control.FinacFont
            android:id="@+id/days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.0"
            android:gravity="right"
            android:text="Days"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#040d19" />

    </LinearLayout>

</LinearLayout>