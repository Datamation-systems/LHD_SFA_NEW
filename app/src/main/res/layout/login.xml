<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#80000000"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/finac_large_dialog_width"
        android:layout_height="@dimen/finac_large_dialog_width"
        android:layout_marginTop="@dimen/finac_bigger_top_margin"
        android:background="@drawable/round_edges_splash"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="200dp"
            android:layout_height="@dimen/finac_bigger_top_margin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/tour_spinner_top_margin"
            android:layout_gravity="center"
            android:background="@drawable/lhd_logo"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/finac_medium_top_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="@dimen/finac_bigger_textview_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/finac_medium_top_margin"
                android:background="@drawable/custom_textbox"
                android:drawableLeft="@drawable/user"
                android:ems="10"
                android:hint="Username"
                android:textSize="@dimen/finac_specific_text_size">

                <requestFocus />

            </EditText>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="@dimen/finac_bigger_textview_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/finac_large_padding"
                android:background="@drawable/custom_textbox"
                android:drawableLeft="@drawable/password"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="@dimen/finac_specific_text_size">

            </EditText>

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="@dimen/finac_bigger_button_width"
                android:layout_height="@dimen/finac_search_edititext_height"
                android:layout_marginTop="@dimen/finac_medium_top_margin"
                android:textSize="@dimen/toolbar_text_size"
                android:textStyle="bold"
                android:textColor="#BFB0B0"
                android:gravity="center"
                android:shadowColor="#8b7d7d"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="0.6"
                android:background="@drawable/button"
                android:padding="@dimen/finac_large_padding"
                android:text="LOGIN" />

            <com.lankahardwared.lankahw.control.FinacFont
                android:id="@+id/textVer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/finac_medium_top_margin"
                android:layout_marginTop="@dimen/tour_spinner_height"
                android:gravity="center_horizontal"
                android:text="Version 1.0"
                android:textSize="@dimen/finac_medium_text_size"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>