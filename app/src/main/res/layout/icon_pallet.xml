<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/icon_pallet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--android:background=""-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_toolbar"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:layout_marginTop="@dimen/finac_dashboard_specific_margin"
                android:background="@drawable/round_edge_caption"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.lankahardwared.lankahw.view.vansale.Chatfont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="DASHBOARDS"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/finac_dashboard_header_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--Dashboard -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finac_dashboard_single_line_outer_height"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_iconbox"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgDashboard"
                            android:layout_width="@dimen/finac_dashboard_image_height"
                            android:layout_height="@dimen/finac_dashboard_image_height"
                            android:background="@drawable/circle_ic_dashone" />

                        <com.lankahardwared.lankahw.view.vansale.Chatfont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DASHBOARD"
                            android:textColor="#000"
                            android:textSize="@dimen/finac_dashboard_icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </TableRow>


            </LinearLayout>

            <!--Primary transactions-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:layout_marginTop="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_caption"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.lankahardwared.lankahw.view.vansale.Chatfont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="PRIMARY TRANSACTIONS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/finac_dashboard_header_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finac_dashboard_single_line_outer_height"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_iconbox"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgPresale"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_sales" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRE SALES"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgReturn"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_return" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SALES RETURN"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgReceipt"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_receipt" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RECEIPT"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!--Secondary transaction-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:layout_marginTop="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_caption"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.lankahardwared.lankahw.view.vansale.Chatfont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="SECONDARY TRANSACTIONS"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/finac_dashboard_header_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finac_dashboard_single_line_outer_height"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_iconbox"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgExpense"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_expensive" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPENSE"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgNonProd"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_nonprod" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NON PRODUCTIVE"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTourInfo"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_tour" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOUR INFO"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Management -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:layout_marginTop="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_caption"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.lankahardwared.lankahw.view.vansale.Chatfont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="MANAGEMENT INFO"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/finac_dashboard_header_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/finac_dashboard_single_line_outer_height"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_iconbox"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgAddUser"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_add_user" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:id="@+id/newCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW CUSTOMER"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgMrkShr"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_market_share"/>

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:id="@+id/marketShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEPOSIT ENTRY"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSalrep"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_salesman" />

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SALES EXEC"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgStockInquiry"
                        android:layout_width="@dimen/finac_dashboard_image_height"
                        android:layout_height="@dimen/finac_dashboard_image_height"
                        android:background="@drawable/circle_ic_stock"/>

                    <com.lankahardwared.lankahw.view.vansale.Chatfont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STOCK INQUIRY"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/finac_dashboard_icon_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!--Administrator-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:layout_marginTop="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_caption"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.lankahardwared.lankahw.view.vansale.Chatfont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="UTILITIES"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/finac_dashboard_header_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tour_spinner_top_margin"
                android:layout_marginRight="@dimen/tour_spinner_top_margin"
                android:background="@drawable/round_edge_iconbox"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_single_line_outer_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgDownload"
                            android:layout_width="@dimen/finac_dashboard_image_height"
                            android:layout_height="@dimen/finac_dashboard_image_height"
                            android:background="@drawable/circle_ic_download_new"/>

                        <com.lankahardwared.lankahw.view.vansale.Chatfont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="DOWNLOAD STOCK"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="@dimen/finac_dashboard_icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgSqlite"
                            android:layout_width="@dimen/finac_dashboard_image_height"
                            android:layout_height="@dimen/finac_dashboard_image_height"
                            android:background="@drawable/circle_ic_database"/>

                        <com.lankahardwared.lankahw.view.vansale.Chatfont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATABASE"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="@dimen/finac_dashboard_icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgPrinter"
                            android:layout_width="@dimen/finac_dashboard_image_height"
                            android:layout_height="@dimen/finac_dashboard_image_height"
                            android:background="@drawable/circle_ic_printer"/>

                        <com.lankahardwared.lankahw.view.vansale.Chatfont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRINTER"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="@dimen/finac_dashboard_icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/finac_dashboard_single_line_outer_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgSync"
                            android:layout_width="@dimen/finac_dashboard_image_height"
                            android:layout_height="@dimen/finac_dashboard_image_height"
                            android:background="@drawable/cirle_ic_sync_new" />


                        <com.lankahardwared.lankahw.view.vansale.Chatfont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SYNCHRONIZE"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="@dimen/finac_dashboard_icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/finac_dashboard_double_line_inner_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgUpload"
                            android:layout_width="@dimen/finac_dashboard_image_height"
                            android:layout_height="@dimen/finac_dashboard_image_height"
                            android:background="@drawable/circle_ic_upload_new" />

                        <com.lankahardwared.lankahw.view.vansale.Chatfont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPLOAD"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="@dimen/finac_dashboard_icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
